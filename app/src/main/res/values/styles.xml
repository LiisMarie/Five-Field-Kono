<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="gameButtonUnused" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_unused</item>
    </style>

    <style name="gameButtonWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="gameButtonBlack" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_black</item>
    </style>

    <style name="startGameButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:background" >@drawable/button_start_game</item>
    </style>

    <style name="ToggleButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorGameboardBlackButton</item>
        <item name="colorAccent">@color/colorGameboardWhiteButton</item>
    </style>

</resources>
